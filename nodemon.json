{
  "watch": ["backend/**/*.js"],
  "ext": "js",
  "ignore": [
    "backend/logs/**/*",
    "backend/backups/**/*",
    "backend/*.log",
    "backend/node_modules/**/*",
    "backend/uploads/**/*",
    "backend/temp/**/*"
  ],
  "env": {
    "NODE_ENV": "development",
    "ENABLE_FILE_LOGGING": "false"
  },
  "delay": 2000,
  "verbose": true
}